{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fw-location.json",
  "title": "Framework Location",
  "description": "Configuration pointing to the framework installation (FW_ROOT)",
  "type": "object",
  "required": ["frameworkRoot"],
  "properties": {
    "frameworkRoot": {
      "type": "string",
      "description": "Absolute path to the framework installation directory (FW_ROOT)"
    },
    "frameworkVersion": {
      "type": "string",
      "description": "Version of the framework currently in use",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdateCheck": {
      "type": "string",
      "format": "date",
      "description": "Date of last update check (YYYY-MM-DD)"
    },
    "updateChannel": {
      "type": "string",
      "enum": ["stable", "beta"],
      "description": "Update channel for framework updates",
      "default": "stable"
    }
  },
  "_example": {
    "frameworkRoot": "E:\\My-Writing-Projects\\FW_ROOT",
    "frameworkVersion": "0.16.1",
    "lastUpdateCheck": "2025-11-28",
    "updateChannel": "stable"
  },
  "_template": {
    "frameworkRoot": "",
    "frameworkVersion": "",
    "lastUpdateCheck": "",
    "updateChannel": "stable"
  }
}
